[sub_resource type="GDScript" id="GDScript_cl1kf"]
resource_name = "sun"
script/source = "extends PointLight2D

const _dayDur:float = 60;
const _nightDur:float = 30;

var _worldCenter:Vector2;

var _rising:bool = true;

var _posTween:Tween;
var _energyTween:Tween;


func _ready() -> void:
	# Wait for Initial Map Generation
	#World.Initial_MapGen_Complete.connect(_On_Initial_MapGen_Complete);
	pass;


func _unhandled_key_input(event: InputEvent) -> void:
	if event.is_action_pressed(\"Zero\"):
		if _posTween != null:
			_posTween.stop();
			_energyTween.stop();
		if _rising:
			#self.position.x = _worldCenter.x;
			_Set(_nightDur);
		else:
			_Rise(_dayDur);


func _Rise(duration:float) -> void:
	
	#self.position.x = _worldCenter.x + World.MapWidth() / 2;
	
	#_posTween = create_tween();
	#_posTween.set_trans(Tween.TRANS_CUBIC);
	#_posTween.set_ease(Tween.EASE_OUT);
	#_posTween.tween_property(self, \"position:x\", _worldCenter.x, duration);
	
	_rising = !_rising;
	var sun_energy:float = _rising;
	
	_energyTween = create_tween();
	_energyTween.set_trans(Tween.TRANS_CUBIC);
	_energyTween.set_ease(Tween.EASE_OUT);
	_energyTween.tween_property(self, \"energy\", sun_energy, duration);
	
	await _energyTween.finished;
	
	_Set(_nightDur);


func _Set(duration:float) -> void:
	
	#var endX:float = _worldCenter.x - World.MapWidth() / 2;
	#
	#_posTween = create_tween();
	#_posTween.set_trans(Tween.TRANS_CUBIC);
	#_posTween.set_ease(Tween.EASE_IN);
	#_posTween.tween_property(self, \"position:x\", endX, duration);
	
	_rising = !_rising;
	var sun_energy:float = _rising;
	sun_energy += 0.05;
	
	_energyTween = create_tween();
	_energyTween.set_trans(Tween.TRANS_CUBIC);
	_energyTween.set_ease(Tween.EASE_OUT);
	_energyTween.tween_property(self, \"energy\", sun_energy, duration);
	
	await _energyTween.finished;
	
	await get_tree().create_timer(_nightDur).timeout;
	
	_Rise(_dayDur);


# Functions: Signals ||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||


func _On_Initial_MapGen_Complete() -> void:
	_worldCenter = Vector2.ONE * (World.MapWidth() / 2) * World.CellSize;
	self.position = _worldCenter;
	await get_tree().create_timer(60).timeout;
	_Set(_nightDur);
	
"

